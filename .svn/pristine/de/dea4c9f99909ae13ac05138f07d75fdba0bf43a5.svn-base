			{data:'wzxje'},
			{data:'wzxxw'},
			{data:'wzxwp'}
		],
		columnDefs : [
				 ],
	    	    
	  });
    	table_ylqx.on('init.dt',function(e,settings,json,xhr){
    		if(json.recordsTotal <= 5){
    			$('#table_ylqx_wrapper .bottom').hide();
			}else{
				$('#table_ylqx_wrapper .bottom').show();
			}
    		if(json.recordsTotal == 0){
    			initAddflex("table_ylqx_icon");
    		}
    		
        })
	}
    
